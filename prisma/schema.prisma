generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  EXPENSE
  INCOME
  BILL
  SUBSCRIPTION
  SAVINGS
  REFUND
}

enum Recurrence {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  categories           Category[]
  goals                SavingsGoal[]
  transactions         Transaction[]
  monthlyBalanceSummaries MonthlyBalanceSummary[]
}

model Category {
  id     String   @id @default(cuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  label  String
  color  String?
  icon   String?
  budget Decimal?

  transactions Transaction[]
}

model SavingsGoal {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  name          String
  targetAmount  Decimal
  currentAmount Decimal   @default(0)
  dueDate       DateTime?

  createdAt DateTime @default(now())

  transactions Transaction[]
}

model Transaction {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  label String
  date  DateTime
  value Decimal
  type  TransactionType

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  goal   SavingsGoal? @relation(fields: [goalId], references: [id])
  goalId String?

  recurrence        Recurrence?
  recurrenceCount   Int?
  isPaid            Boolean?    @default(false)
  isAuto            Boolean?    @default(false)
  dueDate           DateTime?
  recurrenceEndDate DateTime?

  parentTransaction   Transaction?  @relation("RecurringTransactions", fields: [parentTransactionId], references: [id], onDelete: Cascade)
  parentTransactionId String?
  childTransactions   Transaction[] @relation("RecurringTransactions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MonthlyBalanceSummary {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  year   Int
  month  Int

  totalIncome      Decimal @default(0)
  totalBills       Decimal @default(0)
  totalSavings     Decimal @default(0)
  totalSubscriptions Decimal @default(0)
  totalExpenses    Decimal @default(0)
  totalRefunds     Decimal @default(0)
  balance          Decimal @default(0)

  updatedAt DateTime @updatedAt

  @@unique([userId, year, month])
  @@index([userId, year, month])
}
